@model AUTOCAD.Models.Komentarz

<h2>Edytuj komentarz</h2>

<form asp-action="Edit" asp-controller="Komentarz" method="post">
    <input type="hidden" asp-for="KomentarzId" />
    <input type="hidden" asp-for="KursId" />

    <div class="form-group">
        <label asp-for="Tresc">Treść</label>
        <textarea class="form-control" asp-for="Tresc" required></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-2">Zapisz zmiany</button>
    <a asp-action="Details" asp-controller="Kurs" asp-route-id="@Model.KursId" class="btn btn-secondary mt-2">Anuluj</a>
</form>
