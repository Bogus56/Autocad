@model AUTOCAD.Models.Komentarz

<h2>Dodaj komentarz</h2>

<form asp-action="Create" asp-controller="Komentarz" method="post">
    <input type="hidden" name="kursId" value="@ViewBag.KursId" />

    <div class="form-group">
        <label asp-for="Tresc">Treść</label>
        <textarea class="form-control" asp-for="Tresc" required></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-2">Dodaj komentarz</button>
    <a asp-action="Details" asp-controller="Kurs" asp-route-id="@ViewBag.KursId" class="btn btn-secondary mt-2">Powrót</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
